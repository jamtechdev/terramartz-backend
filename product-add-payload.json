{
  "endpoint": "POST /api/products",
  "description": "Create a new product (Seller Only)",
  "authentication": "Bearer Token Required",
  "authorization": "Seller Role Required",
  "contentType": "multipart/form-data",
  
  "requiredFields": [
    "title",
    "price",
    "category",
    "stockQuantity"
  ],
  
  "payload": {
    "title": "Organic Fresh Tomatoes",
    "description": "Fresh organic tomatoes grown locally without pesticides. Perfect for salads and cooking.",

  "doNotSend": [
    "farmId",
    "farmName",
    "createdBy",
    "slug"
  ],
  
  "fieldDescriptions": {
    "title": "Product name (required, max 50 chars)",
    "description": "Product description (optional)",
    "price": "Selling price (required, number)",
    "originalPrice": "Original price before discount (optional)",
    "category": "Category ID (required)",
    "stockQuantity": "Available stock (required, min 0)",
    "productType": "Type: 'regular', 'premium', 'fresh', 'organic' (default: 'regular')",
    "status": "Status: 'active', 'inactive', 'draft', 'out_of_stock', 'archived' (default: 'draft')",
    "organic": "Is organic product (boolean, default: false)",
    "featured": "Is featured product (boolean, default: false)",
    "tags": "Array of tags (max 5 tags)",
    "discount": "Discount amount (number, default: 0)",
    "discountType": "Discount type: 'fixed' or 'percentage' (default: 'fixed')",
    "discountExpires": "Discount expiry date (ISO date string)",
    "delivery": "Delivery option: 'today', 'tomorrow', 'custom' (default: 'today')",
    "productImages": "Array of image files (max 8 images, multipart/form-data)"
  },
  
  "autoGeneratedFields": {
    "createdBy": "Automatically set from authenticated user",
    "farmId": "Automatically set from seller's farm (DO NOT send in payload)",
    "farmName": "Automatically set from seller's business name (DO NOT send in payload)",
    "slug": "Automatically generated from title (unique)"
  },
  
  "importantNote": "DO NOT send farmId and farmName in payload - they are automatically set from the authenticated seller's farm",
  
